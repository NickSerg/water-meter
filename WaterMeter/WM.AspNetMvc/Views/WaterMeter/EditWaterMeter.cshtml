@model WM.AspNetMvc.Models.WaterMeter

@{
    ViewBag.Title = "Редактирование показания пробора учёта";
}

<h2>Редактирование показания прибора учёта</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
@*        @Html.LabelFor(x => x.Period.ToString("yyyy MMMM"))*@
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Cold)
        @Html.TextBoxFor(x => x.Cold, new { Class = "form-control" })
        @Html.ValidationMessageFor(x => x.Cold)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Hot)
        @Html.TextBoxFor(x => x.Hot, new { Class = "form-control" })
        @Html.ValidationMessageFor(x => x.Hot)
    </div>

    <input type="submit" value="Сохранить" class="btn btn-default" />
}